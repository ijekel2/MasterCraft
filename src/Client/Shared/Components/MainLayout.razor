@inherits LayoutComponentBase

<div class="page">
    <div class="main">
        <NavMenu />
        <div class="content px-4">
             @Body
        </div>
    </div>
</div>

<style>
    /*Edit form styling*/
    .mc-edit-form {
        display: flex;
        gap: 10px;
        flex-direction: column;
        margin: auto;
    }

    .validation-message {
        white-space: nowrap;
    }

    .validation-errors {
        text-align: left;
    }

    /*Input Styling*/
    .mc-input {
        border-color: @Constants.McGreen !important;
        border-radius: 5px  !important;
        font-family: 'Roboto';
    }

    .mc-input:focus {
        border-color: @Constants.McGreen !important;
    }

    /*Button Styling*/
    .mc-btn {
        border-radius: 50px;
        height: 40px;
        min-width: 110px;
        font-family: 'Archivo Black';
    }

    .mc-btn-black {
        background-color: @Constants.McBlack;
        border-color: @Constants.McBlack;
    }

    .mc-btn-black:hover {
        background-color: @Constants.McDarkBlack;
    }

    .mc-btn-green {
        background-color: @Constants.McGreen;
        border-color: @Constants.McGreen;
    }

    .mc-btn-green:hover {
        background-color:  @Constants.McDarkGreen;
    }

    .mc-btn-gray {
        background-color: @Constants.McButtonGray;
        border-color: @Constants.McButtonGray;
    }

    .mc-btn-gray:hover {
        background-color: @Constants.McButtonDarkGray;
    }

    /*Text and heading styling*/
    hr {
        display: block;
        width: 100%;
        background-color: @Constants.McLightGray;
        height: 1px;
    }

    h1, h2, h3, label{
        font-family: 'Archivo Black';
    }

    .mc-title {
        width: 800px;
        text-align: center;
        margin: auto;
    }

    /* Card styling*/
    .e-card, .e-card:hover{
        box-shadow: 5px 5px 5px @Constants.McGray;
        background-color: @Constants.McLightGray
    }
</style>
