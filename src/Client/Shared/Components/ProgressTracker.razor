@using MasterCraft.Client.Mentors.Components
@using MasterCraft.Client.Common.Services
@using System.Security.Claims;

@inject NavigationManager Navigation

<div class="container">
    <div class="mc-progress-tracker">
        @foreach (var crumb in progressTrackerItems)
        {
            bool active = currentProgressItem >= crumb.Key;

            @*if (crumb.Key > 1)
            {
                string dividerClass = $"divider {(active ? "active" : "inactive")}";
                <SfIcon Name="IconName.ChevronRight" IconCss="@dividerClass"></SfIcon>
            }*@

            string labelClass = $"label {(active ? "active-btn" : "inactive")}";
            <a class=@labelClass @onclick="() => OnProgressItemClick(crumb.Key)">@crumb.Value.Label</a>
        }
    </div>
</div>


<style>
    .container {
        text-align: center;
    }

    .mc-progress-tracker {
        display: inline-flex;
        flex-direction: row;
    }

    .active, .active-btn {
        color: @Colors.McGreen !important;
        cursor: pointer;
    }

    .inactive {
         color: @Colors.McGray !important;
    }

    .active-btn:hover {
        color:  @Colors.McDarkGreen !important;
    }

    .divider {
        vertical-align: bottom;
        margin: 5px;
    }

    .mc-progress-tracker > .label {
        font-family: @Fonts.Button;
        font-weight: bold;
        font-size: 20px;
        vertical-align: middle;
        margin: 15px;
    }
</style>