<SfButton CssClass=@CssClass @onclick=@OnClick>@Caption</SfButton>

<style>
    .e-btn{
        border-radius: 50px;
        height: 40px;
        width: 120px;
    }

    .mc-btn-black{
        background-color: @Constants.McBlack;
        border-color: @Constants.McBlack;
    }

    .mc-btn-black:hover {
        background-color:@Constants.McLightBlack;
    }

    .mc-btn-green{
        background-color: @Constants.McGreen;
        border-color: @Constants.McGreen;
    }

    .mc-btn-green:hover {
        background-color: @Constants.McLightGreen;
    }
</style>

@code{
    [Parameter]
    public string Caption { get; set; }

    [Parameter]
    public string CssClass { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

    private string GetFullCssClass()
    {
        return $"e-btn {CssClass}";
    }
}

