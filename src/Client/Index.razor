@page "/"

<br />
<br />
<div class="container">
    <h1>Welcome to MasterCraft</h1>
    <br />
    <SfButton CssClass="mc-btn mc-btn-green" OnClick="GoToSignUp">@Properties.Resources.SignUp</SfButton>
    <div id="test-buttons">
        <SfButton OnClick="ProcessException">Create Handled Error</SfButton>
